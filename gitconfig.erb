[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	co = checkout
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim 
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[imap]
  folder = "[Gmail]/Drafts"
  host = imaps://imap.gmail.com
  user = <%= print("Gmail username: "); STDOUT.flush; STDIN.gets.chomp %>
  pass = <%= print("Gmail password: "); STDOUT.flush; STDIN.gets.chomp %>
  port = 993
  sslverify = false
