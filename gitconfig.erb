[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git --no-pager l -20
  ra = !git r --all
  ff = merge --ff-only
  p = pull --rebase
  pullff = pull --ff-only
  l = log --graph --abbrev-commit --date=relative 
  la = !git l --all
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all
  pom = push origin master
  prom = push --rebase origin master
[color]
	diff = auto
	status = auto
	branch = auto
  ui = auto
[merge]
  tool = vimdiff
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim 
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
  pretty=<%= %q{format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset} %>
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[imap]
  folder = "[Gmail]/Drafts"
  host = imaps://imap.gmail.com
  user = <%= print("Gmail username: "); STDOUT.flush; STDIN.gets.chomp %>
  pass = <%= print("Gmail password: "); STDOUT.flush; STDIN.gets.chomp %>
  port = 993
  sslverify = false
