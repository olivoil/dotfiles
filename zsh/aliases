# vim
alias mvim="/Applications/MacVim.app/Contents/MacOS/Vim -g"

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# terminitor
alias t='terminitor'
alias ts='terminitor start'
alias te='terminitor edit'

# git

alias git='hub'
alias gco='git checkout'                                                                                │if type compdef >/dev/null; then                                                                   alias gb='git branch'                                                                                   │   compdef hub=git                                                                                 alias gs='git status'                                                                                   │fi 
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias glog="git log --pretty=format:'%ar	%an	%ae	%h - %s' --date-order --graph"
alias gh='git push heroku master'

# rails
alias bi='bundle install --binstubs=.bin --path=vendor'
alias rn='bundle exec rails new . --skip-test-unit --skip-bundle && bi'
alias r='rails'
alias tlog='tail -f log/development.log'
alias be='bundle exec'
alias generate='rails g'
alias scaffold='rails scaffold'
alias migrate='rake db:migrate db:test:clone'
alias restart='touch tmp/restart.txt'
alias pryr='pry -r ./config/environment'

alias rials='rails'

# commands starting with % for pasting from web
alias %=' '
