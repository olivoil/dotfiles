# cd
alias ..='cd ..'
# setopt auto_cd
# cdpath=($HOME/Dropbox/Code $HOME/Dropbox/Code/projects $HOME/Dropbox/Code/projects/ruby)

# vim
alias mvim="/Applications/MacVim.app/Contents/MacOS/Vim -g"

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# terminitor
alias t='terminitor'
alias ts='terminitor start'
alias te='terminitor edit'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias glog="git log --pretty=format:'%ar	%an	%ae	%h - %s' --date-order --graph"
alias gh='git push heroku master'

# rails
alias rials='rails'
alias tlog='tail -f log/development.log'
alias bi='bundle install --binstubs=.bin'
alias be='bundle exec'
alias generate='rails g'
alias scaffold='rails scaffold'
alias migrate='rake db:migrate db:test:clone'
alias restart='touch tmp/restart.txt'

# commands starting with % for pasting from web
alias %=' '
